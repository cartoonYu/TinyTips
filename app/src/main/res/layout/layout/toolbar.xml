<?xml version="1.0" encoding="utf-8"?>
<!--此xml为所有页面的标题栏-->
<!--点击返回按钮返回到上一活动，第一个TextView为标题栏所在页面的名字-->
<!--二到四个为工具（从右往左），可以自定义背景或文字并设置操作事件-->
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="#00000000"
    android:id="@+id/toolBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/toolBarLayout">

        <TextView
            android:id="@+id/toolBarBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toolBarBack"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/toolBarTag" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/tooBarTool1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/tooBarTool1"
            android:layout_marginRight="40dp"
            android:id="@+id/tooBarTool2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/tooBarTool2"
            android:layout_marginRight="15dp"
            android:id="@+id/tooBarTool3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/tooBarTool3"
            android:layout_marginRight="15dp"
            android:id="@+id/tooBarTool4" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>