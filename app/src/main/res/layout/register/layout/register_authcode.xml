<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/register_phonenum">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7.5dp"
        android:src="@mipmap/register_authcode"
        android:id="@+id/authcode"/>
    <com.cartoon.tinytips.util.UI.ScrollEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/authcode"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/coners_bg"
        android:hint="请输入验证码"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/register_authCode" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/register_sendauthcode"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="发送验证码"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/register_sendAuthCode"/>
</RelativeLayout>