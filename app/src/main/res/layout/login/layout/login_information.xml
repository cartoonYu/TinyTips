<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/login_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/coners_bg">

        <com.cartoon.tinytips.util.UI.ScrollEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/login_account"
            android:drawablePadding="10dp"
            android:hint="请输入账号/邮箱/手机号码"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/login_account"
            android:background="@drawable/coners_bg"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/login_password_layout"
        android:layout_below="@id/login_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/coners_bg">

        <com.cartoon.tinytips.util.UI.ScrollEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="10dp"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/login_password"
            android:background="@drawable/coners_bg"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/login_password_layout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_login"
        android:id="@+id/login_login">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="登录"
            android:textColor="#cfeffa"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>