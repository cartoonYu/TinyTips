<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/detail_bg">

    <RelativeLayout
        android:id="@+id/recommend_itemup"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/recommend_title"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/txcolor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/recommend_content"
            android:layout_below="@id/recommend_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="内容"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recommend_item_avatar"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/nav_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/recommend_item_avatar"
            android:text="@string/username"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/Col"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/Conums_item_recommedn"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/mycollection"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_toRightOf="@id/Conums_item_recommedn"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Cl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/Col">

            <Button
                android:id="@+id/Cnums_item_recommedn"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/peresonal"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/Cnums_item_recommedn"
                android:gravity="center"
                android:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/Cl">

            <Button
                android:id="@+id/Fnums_item_recommedn"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/favourit"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/Fnums_item_recommedn"
                android:gravity="center"
                android:text="0" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>