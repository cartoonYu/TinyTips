<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/homepageStatusBar"/>

    <TextView
        android:id="@+id/txt_topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="提醒"
        android:textColor="@color/txcolor"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/rg_tab_bar"
        android:layout_below="@id/homepageStatusBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_Recommend"
            android:layout_weight="1"
            android:text="推荐"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/home_Hot"
            android:layout_weight="1"
            android:text="热门"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:button="@null">
        </RadioButton>

        <RadioButton
            android:id="@+id/home_Favorite"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:button="@null"/>

    </RadioGroup>

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/home_Flowingbar"
        android:layout_below="@id/rg_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp">


    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_below="@id/home_Flowingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="#000000" >
    </android.support.v4.view.ViewPager>
</RelativeLayout>