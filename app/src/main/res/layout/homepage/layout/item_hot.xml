<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:background="@color/detail_bg">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/num"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="@color/hot1"
            android:textSize="16sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/Hitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="标题"
            android:textColor="@color/txcolor"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/Hitem_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/Hitem_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="内容"/>

        <TextView
            android:id="@+id/clicknums"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/Hitem_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="8sp"
            android:gravity="center"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/clicknums"
            android:layout_below="@id/Hitem_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="次浏览"
            android:textSize="8sp"
            android:gravity="center_vertical"/>
    </RelativeLayout>

</RelativeLayout>