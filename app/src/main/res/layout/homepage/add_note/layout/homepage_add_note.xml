<?xml version="1.0" encoding="utf-8"?>
<!--新增笔记页-->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homePageAddNoteDrawerLayout"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:fitsSystemWindows="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">
                <include layout="@layout/toolbar"
                    android:id="@+id/homePageAddNoteToolbar"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_below="@id/homePageAddNoteToolbar"
                    android:textSize="16sp"
                    android:id="@+id/homePageAddNoteNote"
                    android:fitsSystemWindows="true"/>
            </RelativeLayout>
        </ScrollView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="-8dp"
            android:src="@drawable/homepage_addnote_arrows"
            android:background="@color/white"
            android:id="@+id/homePageAddNoteMenu"
            android:fitsSystemWindows="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:background="@color/white"
        android:orientation="vertical"
        android:fitsSystemWindows="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/homepage_addnote_classify"
            android:text="分类"
            android:textSize="16sp"
            android:id="@+id/homePageAddNoteMenuAddClassify"
            android:fitsSystemWindows="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/homepage_addnote_title"
            android:text="标题"
            android:textSize="16sp"
            android:id="@+id/homePageAddNoteMenuAddTitle"
            android:fitsSystemWindows="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/homepage_addnote_album"
            android:text="图片"
            android:textSize="16sp"
            android:id="@+id/homePageAddNoteMenuSelectPhoto"
            android:fitsSystemWindows="true"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>