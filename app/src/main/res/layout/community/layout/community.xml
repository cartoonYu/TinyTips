<?xml version="1.0" encoding="utf-8"?>
<!--社区页面-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"
        android:id="@+id/communityToolBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/communityToolBar"
        android:orientation="horizontal"
        android:id="@+id/communityTabControl">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="热门"
            android:textSize="16sp"
            android:id="@+id/communityHot"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="推荐"
            android:textSize="16sp"
            android:id="@+id/communityRecommend"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="关注"
            android:textSize="16sp"
            android:id="@+id/communityFocus"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/communityTabControl"
        android:background="@color/gray"
        android:id="@+id/communityFrame"/>
</RelativeLayout>