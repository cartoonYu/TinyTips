<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="标题"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:id="@+id/note_detail_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_detail_title"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/note_detail_contents"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_detail_contents"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:id="@+id/note_detail_tag1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_detail_contents"
            android:layout_toRightOf="@id/note_detail_tag1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:id="@+id/note_detail_tag2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_detail_contents"
            android:layout_toRightOf="@id/note_detail_tag2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:id="@+id/note_detail_tag3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_detail_contents"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="时间"
            android:id="@+id/note_detail_date"/>
    </RelativeLayout>
</ScrollView>