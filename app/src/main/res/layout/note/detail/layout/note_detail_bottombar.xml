<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:text="0"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/note_detail_like"
        android:drawablePadding="5dp"
        android:id="@+id/note_detail_like"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:text="0"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/note_detail_comment"
        android:drawablePadding="5dp"
        android:id="@+id/note_detail_comment"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/note_detail_like"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:text="0"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/note_detail_forward"
        android:drawablePadding="5dp"
        android:id="@+id/note_detail_forward"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/note_detail_comment"
        android:layout_marginRight="60dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:text="0"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/note_detail_collect"
        android:drawablePadding="5dp"
        android:id="@+id/note_detail_collect"/>
</RelativeLayout>