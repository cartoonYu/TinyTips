<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/skyBlue"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nav_icon"
        android:id="@+id/personal_homepage_HeadPro"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/personal_homepage_coners"
        android:text="关注"
        android:textSize="14sp"
        android:textColor="@color/txcolor"
        android:gravity="center"
        android:id="@+id/personal_homepage_focus"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_homepage_HeadPro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="昵称"
        android:textSize="18sp"
        android:id="@+id/personal_homepage_nickName"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_homepage_HeadPro"
        android:layout_toRightOf="@id/personal_homepage_nickName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/personal_homepage_sex_man"
        android:id="@+id/personal_homepage_sex"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_homepage_nickName"
        android:layout_marginTop="10dp"
        android:background="@color/gray">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/information_school">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/personal_homepage_school"
                android:id="@+id/information_school_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="学校"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_toRightOf="@id/information_school_image"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="五邑大学"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/personal_homepage_school"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/information_school"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:id="@+id/information_major">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/personal_homepage_major"
                android:id="@+id/information_major_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/information_major_image"
                android:layout_marginLeft="10dp"
                android:text="专业"
                android:textColor="#000000"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="xxxx"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/personal_homepage_major"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/information_major"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/personal_homepage_interest"
                android:id="@+id/information_interest_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/information_interest_image"
                android:layout_marginLeft="10dp"
                android:text="兴趣"
                android:textColor="#000000"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="xxxx"
                android:textSize="14sp"
                android:id="@+id/personal_homepage_interest1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_homepage_interest1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="xxxx"
                android:textSize="14sp"
                android:id="@+id/personal_homepage_interest2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/personal_homepage_interest1"
                android:layout_marginRight="50dp"
                android:text="xxxx"
                android:textSize="14sp"
                android:id="@+id/personal_homepage_interest3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_homepage_interest1"
                android:layout_toLeftOf="@id/personal_homepage_interest2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:text="xxxx"
                android:textSize="14sp"
                android:id="@+id/personal_homepage_interest4"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>