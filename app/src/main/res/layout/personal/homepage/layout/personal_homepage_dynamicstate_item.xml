<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="标题"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/personal_homepage_dynamicState_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="时间"
            android:textSize="14sp"
            android:id="@+id/personal_homepage_dynamicState_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_homepage_dynamicState_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_homepage_dynamicstate_like"
            android:drawablePadding="5dp"
            android:id="@+id/personal_homepage_dynamicState_like"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_homepage_dynamicState_title"
            android:layout_toRightOf="@id/personal_homepage_dynamicState_like"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_homepage_dynamicstate_comment"
            android:drawablePadding="5dp"
            android:id="@+id/personal_homepage_dynamicState_comment"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_homepage_dynamicState_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_homepage_dynamicstate_forward"
            android:drawablePadding="5dp"
            android:id="@+id/personal_homepage_dynamicState_forward"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_homepage_dynamicState_title"
            android:layout_toLeftOf="@id/personal_homepage_dynamicState_forward"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_homepage_dynamicstate_collect"
            android:drawablePadding="5dp"
            android:id="@+id/personal_homepage_dynamicState_collect"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />
    </RelativeLayout>
</android.support.v7.widget.CardView>