<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="40dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/likes_item_avarar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/avarar_lead"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/nav_icon" />

    <TextView
        android:id="@+id/likes_item_userNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/likes_item_avarar"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text="Leo"/>
    <TextView
        android:id="@+id/likes_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="10dp"
        android:layout_toRightOf="@id/likes_item_avarar"
        android:layout_below="@id/likes_item_userNickname"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="关注"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/consers_bg_skyblue"/>
</RelativeLayout>