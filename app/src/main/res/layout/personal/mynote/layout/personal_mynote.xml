<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/statusbar"
        android:id="@+id/personal_mynote_statusbar"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_mynote_statusbar"
        layout="@layout/personal_mynote_toolbar"
        android:id="@+id/personal_mynote_toolbar"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/personal_mynote_toolbar"
        android:background="@color/gray"
        android:id="@+id/personal_mynote_note"/>
</RelativeLayout>