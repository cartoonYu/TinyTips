<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="1dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/personal_mynote_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_mynote_title"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/personal_mynote_tag1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_mynote_title"
            android:layout_toRightOf="@id/personal_mynote_tag1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/personal_mynote_tag2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_mynote_title"
            android:layout_toRightOf="@id/personal_mynote_tag2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/personal_mynote_tag3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_mynote_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="2018-7-8"
            android:textSize="14sp"
            android:id="@+id/personal_mynote_date"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>