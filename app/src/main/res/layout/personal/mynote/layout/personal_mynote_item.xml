<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="1dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/personal_mynote_title"/>

        <ImageView
            android:id="@+id/personal_mynote_delete"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/recycle"/>

        <ImageView
            android:id="@+id/personal_mynote_revamp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_toLeftOf="@id/personal_mynote_delete"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/revamp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/personal_mynote_tag1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/personal_mynote_tag1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:gravity="center"
            android:id="@+id/personal_mynote_tag2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/personal_mynote_tag2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/personal_mynote_tag3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:text="2018-7-8"
            android:textSize="12sp"
            android:id="@+id/personal_mynote_date"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>