<?xml version="1.0" encoding="utf-8"?>
<!--我的页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:background="#00000000"
        android:id="@+id/personalProfile">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personalHeadPortrait"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/nav_icon"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/personalNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="24sp"
            android:layout_below="@+id/personalHeadPortrait"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/personalSignature"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:textSize="14sp"
            android:text="签名"
            android:layout_below="@+id/personalNickName"
            android:gravity="center_horizontal" />





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:layout_marginTop="0.5dp"
        android:id="@+id/personalMyCollect">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/personal_collect"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:layout_marginTop="0.1dp"
        android:id="@+id/personalMyShare">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/personal_share"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="我的分享"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0.1dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:id="@+id/personalSecurity">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/personal_security"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:id="@+id/personalLogout">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/personal_logout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:layout_marginTop="1dp"/>
</LinearLayout>