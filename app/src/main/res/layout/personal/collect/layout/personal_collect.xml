<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/statusbar"
        android:layout_alignParentTop="true"
        android:id="@+id/collect_statusBar"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/toolbar"
        android:layout_below="@id/collect_statusBar"
        android:id="@+id/collect_toolbar"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/collect_toolbar"
        android:background="@color/gray"
        android:id="@+id/personal_collect_collectList"/>
</RelativeLayout>