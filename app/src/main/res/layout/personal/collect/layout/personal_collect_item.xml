<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="1dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/personal_collect_title"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/nav_icon"
            android:id="@+id/personal_collect_headPro"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/personal_collect_headPro"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            android:textSize="12sp"
            android:id="@+id/personal_collect_nickName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_collect_forward"
            android:drawablePadding="5dp"
            android:id="@+id/personal_collect_forward"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/personal_collect_forward"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_collect_collect"
            android:drawablePadding="5dp"
            android:id="@+id/personal_collect_collect"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/personal_collect_collect"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_collect_comment"
            android:drawablePadding="5dp"
            android:id="@+id/personal_collect_comment"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/personal_collect_comment"
            android:text="0"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/personal_collect_like"
            android:drawablePadding="5dp"
            android:id="@+id/personal_collect_like"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>