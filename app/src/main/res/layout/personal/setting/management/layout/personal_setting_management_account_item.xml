<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/personal_setting_management_headpro"
            android:id="@+id/personal_setting_management_headPro"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/personal_setting_management_headPro"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="昵称"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/personal_setting_management_nickName"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>