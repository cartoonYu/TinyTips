<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/statusbar"
        android:id="@+id/statusbar"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/statusbar"
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/personal_setting_management_account"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_setting_management_account"
                layout="@layout/personal_setting_management_add"
                android:id="@+id/personal_setting_management_addAccount"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/personal_setting_management_addAccount"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                layout="@layout/personal_setting_management_logout"
                android:id="@+id/personal_setting_management_logout"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>