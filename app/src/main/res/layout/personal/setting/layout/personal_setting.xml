<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/statusbar"
        android:layout_alignParentTop="true"
        android:id="@+id/personal_setting_statusbar"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_setting_statusbar"
        layout="@layout/toolbar"
        android:id="@+id/personal_setting_toolbar"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/personal_setting_toolbar"
        android:layout_marginTop="20dp"
        layout="@layout/setting_management"
        android:id="@+id/personal_setting_management"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/personal_setting_management"
        android:layout_marginTop="30dp"
        layout="@layout/setting_security"
        android:id="@+id/personal_setting_security"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/personal_setting_security"
        android:layout_marginTop="30dp"
        layout="@layout/setting_about"
        android:id="@+id/personal_setting_about"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/personal_setting_about"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        layout="@layout/setting_logout"
        android:id="@+id/personal_setting_logout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/personal_setting_logout"/>
</RelativeLayout>