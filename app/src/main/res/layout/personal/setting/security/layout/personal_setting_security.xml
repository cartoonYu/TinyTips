<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/statusbar"
        android:id="@+id/statusbar"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusbar"
        layout="@layout/security_toolbar"
        android:id="@+id/toolbar"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        layout="@layout/security_phonenumber"
        android:id="@+id/phoneNum"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/phoneNum"
        android:layout_margin="10dp"
        layout="@layout/security_authcode"
        android:id="@+id/authCode"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/authCode"
        android:layout_margin="10dp"
        layout="@layout/security_newpassword"
        android:id="@+id/newPassword"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/newPassword"
        android:layout_margin="10dp"
        layout="@layout/security_confirmpassword"/>
</RelativeLayout>