<?xml version="1.0" encoding="utf-8"?>
<!--安全页-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/personalSecurityOldPassword"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/personalSecurityNewPassword"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/personalSecurityOldPassword"
            android:layout_below="@+id/personalSecurityOldPassword"
            android:layout_marginTop="30dp"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/personalSecurityConfirmPassword"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/personalSecurityNewPassword"
            android:layout_below="@+id/personalSecurityNewPassword"
            android:layout_marginTop="30dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/personalSecurityOldPassword"
            android:layout_alignBottom="@+id/personalSecurityOldPassword"
            android:layout_alignStart="@+id/textView2"
            android:gravity="center"
            android:text="原密码"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/personalSecurityNewPassword"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="新密码"
            android:textSize="16sp"
            android:id="@+id/textView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/personalSecurityConfirmPassword"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="确认密码"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>